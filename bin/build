#!/usr/bin/env node

var fs = require('fs')

var metalsmith = require('metalsmith')
var markdown = require('metalsmith-markdown')
var typography = require('metalsmith-typography')
var drafts = require('metalsmith-drafts')
var collections = require('metalsmith-collections')
var permalinks = require('metalsmith-permalinks')
var layouts = require('metalsmith-layouts')
var branch = require('metalsmith-branch')
var swig = require('metalsmith-swig-helpers')

var yaml = require('../lib/yaml')
var projects = require('../lib/projects')
var students = require('../lib/students')
var filters = require('../lib/filters/')

/**
 * Build metadata
 */
var build = {
	source: '../content',
	destination: '../build',
	clean: false,
	env: process.env.NODE_ENV || 'development'
}

/**
 * Metadata passed to templates
 */
var metadata = {
	site: {
		title: 'YSDN'
	},
	env: process.env.NODE_ENV || 'development'
}

/**
 * Build settings
 */
var site = metalsmith(__dirname)
	.source(build.source)
	.destination(build.destination)
	.clean(build.clean)
	.metadata(metadata)
	.use(swig({ filters }))
	.use(collections({
		students: { pattern: 'students/**/student.md', refer: false },
		projects: { pattern: 'students/**/project.md', refer: false }
	}))
	.use(students())
	.use(projects())

/**
 * Build pages
 */
site.use(branch('*.yml')
	.use(yaml())
	.use(typography())
	.use(permalinks(':title'))
	.use(layouts({
		engine: 'swig',
		partials: '../layouts',
		directory: '../layouts'
	}))
)

/**
 * Build students
 */
site.use(branch('students/**/student.md')
	.use(markdown({
		smartypants: true,
		gfm: true
	}))
	.use(typography())
	.use(permalinks(':name'))
	.use(layouts({
		engine: 'swig',
		default: 'student.html',
		partials: '../layouts',
		directory: '../layouts'
	}))
)

/**
 * Build projects
 */
site.use(branch('students/**/project.md')
	.use(markdown({
		smartypants: true,
		gfm: true
	}))
	.use(typography())
	.use(permalinks(':owner_name/:title'))
	.use(layouts({
		engine: 'swig',
		default: 'project.html',
		partials: '../layouts',
		directory: '../layouts'
	}))
)


/**
 * Build the site
 */
site.build(err => {
	if (err) throw err
})
